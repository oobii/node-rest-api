cd node-rest-api
npm init -y
npm install express
npm install @babel/core @babel/preset-env @babel/node
npm install body-parser
npm install nodemon
npm install eslint

// if we want to avoid mutation in const objects
// we can install 
// npm install eslint-plugin-immutable
// add "plugin" section and add to the "rules" section

// initializing ESLINT for out project
npx eslint --init

// run periodically to check for style warrnings
npx eslint .

git init

// add .gitignore with content 
//"node_modules"

// add .babelrc with this content
//{
//   "presets": ["@babel/preset-env"]
//}

// to run the server
npx babel-node src/server.js
     or
 npm start    

// open in the browser 
http://localhost:3000/hello